{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Quick Launcher",
  "mainBinaryName": "Quick Launcher",
  "version": "0.1.0",
  "identifier": "com.quicklauncher.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Main",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true,
        "resizable": false,
        "maximizable": false,
        "decorations": false,
        "center": true,
        "visible": false
      },
      {
        "title": "Search",
        "label": "search",
        "width": 600,
        "height": 45,
        "center": true,
        "visible": false,
        "alwaysOnTop": true,
        "decorations": false,
        "resizable": false,
        "maximizable": false,
        "url": "/#/search",
        "backgroundColor": null,
        "shadow": true,
        "skipTaskbar": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "contentProtected": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    }
  }
}
